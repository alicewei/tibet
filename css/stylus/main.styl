body
  color: #33333d
  font-size: 14px
  letter-spacing: 1px
  line-height: 1.2em

a
  text-decoration: none
  color: #33333d
  font-weight: bold
  border-bottom: 1px #CCC dashed

.container
  position: relative
  width: 749px
  margin: 0 auto

#header
  border-bottom: 1px #EEE solid
  padding: 150px 0

.article
  line-height: 2em
  border-bottom: 1px #EEE solid

  .container
    padding: 150px 0 150px 200px

    &:before
      content: ''
      position: absolute
      width: 31px
      height: 31px
      background: #F1F1F1
      border-radius: 16px
      left: 136px
      top: 150px

    &:after
      content: ''
      position: absolute
      left: 150px
      top: 0
      border-left: 3px #F1F1F1 solid
      height: 100%
      width: 0

.article--odd
  background: #FDFDFD

  .container
    &:before
      background: #F5F5F5

    &:after
      border-color: #F5F5F5

.article__title
  font-size: 2em
  margin-bottom: 40px
  font-weight: bold

.article__meta
  position: absolute
  left: 100px
  top: 150px
  width: 0
  text-align: right
  font-size: 12px
  color: #999

  span
    position: absolute
    right: 0
    top: 0
    display: block
    white-space: nowrap

  .article__from
    top: 2em
