#header
  border-bottom: 1px #EEE solid
  height: 130px

.header__sitename
  position: absolute
  top: 20px
  left: 60px
  width: 189px
  height: 120px
  background: url(../images/timeline-title.png)
  overflow: hidden
  text-indent: 100%
  white-space: nowrap
  z-index: 10

  &:after
    content: ''
    width: 11px
    height: 11px
    border-radius: 6px
    position: absolute
    bottom: 4px
    left: 50%
    margin-left: -9px
    background: #CCC

.header__menu
  position: absolute
  right: 0
  top: 20px
  text-align: right
  line-height: 2.2em
  font-size: 12px

  a
    font-weight: normal

.article
  line-height: 2em
  border-bottom: 1px #EEE solid

  .container
    box-sizing: border-box
    padding: 150px 0 150px 200px

    &:before
      content: ''
      position: absolute
      width: 31px
      height: 31px
      background: #F1F1F1
      border-radius: 16px
      left: 136px
      top: 150px

    &:after
      content: ''
      position: absolute
      left: 150px
      top: 0
      border-left: 3px #F1F1F1 solid
      height: 100%
      width: 0

.article--odd
  background: #FDFDFD

  .container
    &:before
      background: #F5F5F5

    &:after
      border-color: #F5F5F5

.article__title
  font-size: 2em
  margin-bottom: 40px
  font-weight: bold

  a
    border: none

.article__meta
  position: absolute
  left: 100px
  top: 150px
  width: 0
  text-align: right
  font-size: 12px
  color: #999

  span
    position: absolute
    right: 0
    top: 0
    display: block
    white-space: nowrap

  .article__from
    top: 2em
